{
    "trailingComma": "none",
    "printWidth": 120,
    "singleQuote": true,
    "tabWidth": 4,
    "overrides": [
        {
            "files": "**/lwc/**/*.html",
            "options": {
                "parser": "lwc"
            }
        },
        {
            "files": "**/lwc/**/*.css",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.{cmp,page,component}",
            "options": {
                "parser": "html"
            }
        }
    ]
}
